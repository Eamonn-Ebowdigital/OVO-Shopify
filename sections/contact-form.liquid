  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Let us keep in touch"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Got a question for the OVO team?"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Intro text"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Send message"
    }
  ]
}
{% endschema %}
