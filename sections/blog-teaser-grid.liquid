<section class="ovo-section">
  <div class="ovo-page-width">
    <div style="display:flex; justify-content:space-between; align-items:flex-end; gap:1rem; margin-bottom:1.75rem;">
      <div>
        <div class="ovo-heading-sm">{{ section.settings.kicker }}</div>
        <h2 class="ovo-heading-lg" style="margin-top:0.5rem;">
          {{ section.settings.heading }}
        </h2>
      </div>
      {% if section.settings.view_all_link != blank %}
        <a href="{{ section.settings.view_all_link }}" class="ovo-heading-sm" style="font-size:0.8rem;">
          {{ section.settings.view_all_label }}
        </a>
      {% endif %}
    </div>

    {% assign source_blog = blogs[section.settings.blog] %}

    <div class="ovo-blog-grid">
      {% if source_blog %}
        {% for article in source_blog.articles limit: section.settings.article_count %}
          {% render 'blog-card', article: article %}
        {% endfor %}
      {% else %}
        <p>No articles found. Choose a blog in this section settings.</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "News â€“ blog teaser grid",
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "From the blog"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest from OVO"
    },
    {
      "type": "number",
      "id": "article_count",
      "label": "Number of articles",
      "default": 3,
      "min": 1,
      "max": 6
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View all link"
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View all label",
      "default": "View all news"
    }
  ]
}
{% endschema %}
