<section class="ovo-section ovo-section--cream">
  <div class="ovo-page-width" style="text-align: center; max-width: 600px; margin: 0 auto;">
    {% if section.settings.kicker != blank %}
      <div class="ovo-heading-sm" style="opacity: 0.8; margin-bottom: 0.5rem;">
        {{ section.settings.kicker }}
      </div>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2 class="ovo-heading-lg" style="margin-bottom: 1.5rem;">
        {{ section.settings.heading }}
      </h2>
    {% endif %}
    {% if section.settings.logo != blank %}
      <div style="margin: 2rem 0;">
        <img src="{{ section.settings.logo | img_url: '400x' }}" alt="{{ section.settings.partner_name | escape }}" style="max-width: 300px; height: auto; margin: 0 auto;">
      </div>
    {% endif %}
    {% if section.settings.description != blank %}
      <p class="ovo-body" style="margin-bottom: 1.5rem;">
        {{ section.settings.description }}
      </p>
    {% endif %}
    {% if section.settings.link != blank and section.settings.link_label != blank %}
      <a href="{{ section.settings.link }}" class="ovo-button">
        {{ section.settings.link_label }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Partnership",
  "tag": "section",
  "class": "section",
  "templates": ["index", "page"],
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "In proud partnership with"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Partner Logo"
    },
    {
      "type": "text",
      "id": "partner_name",
      "label": "Partner Name"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Learn More Link"
    },
    {
      "type": "text",
      "id": "link_label",
      "label": "Link Label",
      "default": "Learn more"
    }
  ],
  "blocks": []
}
{% endschema %}

