<section class="ovo-section {% if section.settings.cream_background %}ovo-section--cream{% endif %}">
  <div class="ovo-page-width ovo-flex ovo-flex--center">
    <div class="ovo-flex__item">
      {% if section.settings.kicker != blank %}
        <div class="ovo-heading-sm">{{ section.settings.kicker }}</div>
      {% endif %}
      <h2 class="ovo-heading-lg" style="margin-top:0.6rem;">
        {{ section.settings.heading }}
      </h2>
      <div class="ovo-body" style="margin-top:0.9rem;">
        {{ section.settings.body }}
      </div>
      {% if section.blocks.size > 0 %}
        <div class="ovo-product-specs">
          {% for block in section.blocks %}
            <div class="ovo-spec">
              <div class="ovo-spec__label">{{ block.settings.label }}</div>
              <div class="ovo-spec__value">{{ block.settings.value }}</div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
      {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
        <div style="margin-top:1.7rem;">
          <a href="{{ section.settings.cta_link }}" class="ovo-button">
            {{ section.settings.cta_label }}
          </a>
        </div>
      {% endif %}
    </div>
    <div class="ovo-flex__item">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.heading | escape }}" style="width:100%; border-radius:30px;">
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Story â€“ text with media",
  "tag": "section",
  "class": "section",
  "templates": ["index", "page"],
  "settings": [
    {
      "type": "checkbox",
      "id": "cream_background",
      "label": "Use cream background",
      "default": false
    },
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Oceans without plastics"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "spec",
      "name": "Specification",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label"
        },
        {
          "type": "text",
          "id": "value",
          "label": "Value"
        }
      ]
    }
  ],
  "max_blocks": 6
}
{% endschema %}
