  "blocks": [
    {
      "type": "cta",
      "name": "CTA Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon/Image"
        },
        {
          "type": "text",
          "id": "kicker",
          "label": "Kicker (optional)"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link Label",
          "default": "Learn more"
        }
      ]
    }
  ],
  "max_blocks": 3
}
{% endschema %}

