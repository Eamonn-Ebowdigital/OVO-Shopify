<section class="ovo-section ovo-section--dark">
  <div class="ovo-page-width ovo-flex ovo-flex--center">
    <div class="ovo-flex__item">
      <div class="ovo-heading-sm">{{ section.settings.kicker }}</div>
      <h1 class="ovo-heading-xl" style="margin-top:0.75rem;">
        {{ section.settings.heading }}
      </h1>
      <p class="ovo-body" style="margin-top:1rem;">
        {{ section.settings.body }}
      </p>
      <div class="ovo-pill-row">
        {% if section.settings.pill_one != blank %}
          <div class="ovo-pill">{{ section.settings.pill_one }}</div>
        {% endif %}
        {% if section.settings.pill_two != blank %}
          <div class="ovo-pill">{{ section.settings.pill_two }}</div>
        {% endif %}
        {% if section.settings.pill_three != blank %}
          <div class="ovo-pill">{{ section.settings.pill_three }}</div>
        {% endif %}
      </div>
      <div style="margin-top:1.8rem;">
        {% if section.settings.primary_button_label != blank and section.settings.primary_button_link != blank %}
          <a href="{{ section.settings.primary_button_link }}" class="ovo-button">
            {{ section.settings.primary_button_label }}
          </a>
        {% endif %}
        {% if section.settings.secondary_button_label != blank and section.settings.secondary_button_link != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="ovo-button ovo-button--ghost">
            {{ section.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>
    </div>
    <div class="ovo-flex__item">
      {% if section.settings.media != blank %}
        <img src="{{ section.settings.media | img_url: '800x' }}" alt="{{ section.settings.heading | escape }}" style="width:100%; border-radius:36px;">
      {% elsif section.settings.video_url != blank %}
        <div style="position:relative; padding-top:56.25%; border-radius:36px; overflow:hidden;">
          <iframe src="{{ section.settings.video_url }}" title="{{ section.settings.heading | escape }}" style="position:absolute; inset:0; width:100%; height:100%; border:0;" allowfullscreen></iframe>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero â€“ bottle and mission",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Oceans without plastics"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Vodka for clean cocktails and cleaner oceans"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body",
      "default": "Ultra-premium, gluten free vodka crafted with care and paired with a radical commitment to cleaning up our oceans."
    },
    {
      "type": "text",
      "id": "pill_one",
      "label": "Pill one",
      "default": "Gluten free"
    },
    {
      "type": "text",
      "id": "pill_two",
      "label": "Pill two",
      "default": "Six times distilled"
    },
    {
      "type": "text",
      "id": "pill_three",
      "label": "Pill three",
      "default": "Every bottle removes plastic"
    },
    {
      "type": "image_picker",
      "id": "media",
      "label": "Hero image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Hero video (optional iframe URL)",
      "info": "Paste an embed URL if you prefer a video hero instead of an image."
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary button label",
      "default": "Buy online"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Find near you"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    }
  ],
  "blocks": [],
  "enabled_on": {
    "templates": ["index"]
  }
}
{% endschema %}
